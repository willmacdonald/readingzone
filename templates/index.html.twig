                                        {% endfor %}
                                    </ul>
                                    <p class="link-btn" style="float: right;"><a href="./">More <i
                                                    class="icon-arrow-right"></i></a>
                                    </p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <aside class="mobile-hide">
                    <figure><a rel="external" href="./"><img src="http://placehold.it/300x400" alt="Placeholder"
                                                             width="300" height="400"></a></figure>
                </aside>
            </div>
