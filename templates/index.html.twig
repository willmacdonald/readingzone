        <article class="module-wide theme-lime">
            <header class="heading-title a">
                <h2><span class="mobile-hide">ReadingZone</span> Authors of the Month</h2>
                <p class="link-btn"><a class="a" href="./">See all authors <i class="icon-arrow-right"></i></a></p>
            </header>
            <div class="tabs-a">
                <nav>
                    <ul>
                        <li><a href="./">Picture book</a></li>
                        <li><a href="./">Children</a></li>
                        <li><a href="./">Teenagers</a></li>
                        <li><a href="./">Young Adult</a></li>
                        <li><a href="./">Debut</a></li>
                        <li><a href="./">Featured Authors</a></li>
                    </ul>
                </nav>
                <div>
                    {% for range_month in author_range %}
                        <div>
                            <ul class="list-aside slider">
                                {% for featured_author in authors[range_month] %}
                                    <li>
                                        {% include('_book_teaser.html.twig') with {'book': featured_author } %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                    {% endfor %}
                </div>
            </div>
        </article>
        <article>
            <div class="double a">
                <div>
                    <h2 class="s35 overlay-b">Competitions <i class="icon-podium"></i> <a href="./" class="text-right">See
                            all</a></h2>
                    <div class="module-entry a">
                        <figure><img src="http://placehold.it/575x385" alt="Placeholder" width="575" height="385">
                        </figure>
                        <h3>Title</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean in erat interdum, rhoncus
                            orci vel, fringilla est. Nam vel condimentum odio.</p>
                        <p class="link-btn"><a class="a" href="./">More <i class="icon-arrow-right"></i></a></p>
                    </div>
                </div>
                <div>
                    <h2 class="s35 overlay-b">Creative Projects <i class="icon-pencils"></i> <a href="./"
                                                                                                class="text-right">See
                            all</a></h2>
                    <div class="module-entry a">
                        <figure><img src="http://placehold.it/575x385" alt="Placeholder" width="575" height="385">
                        </figure>
                        <h3>Title</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean in erat interdum, rhoncus
                            orci vel, fringilla est. Nam vel condimentum odio.</p>
                        <p class="link-btn"><a class="a" href="./">More <i class="icon-arrow-right"></i></a></p>
                    </div>
                </div>
            </div>
        </article>
        <article class="module-wide">
            <h2 class="s35">This month’s highlights <i class="icon-sun"></i></h2>
            <ul class="list-entries">

                {% for key, type in project_types %}
                    {% if latest_projects[key].id is defined %}
                        <li class="{{ themes[key] }}">
                            <h3>{{ type }}</h3>
                            <figure><img src="/project-assets/{{ latest_projects[key].image |default('') }}"
                                         alt="Placeholder"
                                         width="235"
                                         height="335"></figure>
                            <div>
                                <h4>{{ latest_projects[key].title |default('') }}</h4>
                                <p>{{ latest_projects[key].intro_text |default('') }}</p>
                                <p class="link-btn">
                                    <a href="./">More <i class="icon-arrow-right"></i></a>
                                    <a href="./">Make &amp; Send Your Own <i class="icon-arrow-right"></i></a>
                                </p>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </article>
        <article>
            <div class="cols-a a">
                <div>
                    <header class="heading-title">
                        <h1 class="overlay-b">Bookshop <i class="icon-books"></i></h1>
                    </header>
                    <div class="module-box b">
                        <form action="./" method="post" class="form-search">
                            <p>
                                <label for="fsa">Search</label>
                                <input type="search" id="fsa" name="fsa" placeholder="Search" required>
                                <button type="submit" class="hidden">Submit</button>
                            </p>
                            <ul class="list-filter">
                                <li>Filter by:</li>
                                <li class="theme-navy"><a href="./">Young Adult</a></li>
                                <li class="theme-azure"><a href="./">Schools &amp; Libraries</a></li>
                                <li class="theme-carrot"><a href="./">Children</a></li>
                                <li class="theme-coral"><a href="./">Families</a></li>
                                <li class="theme-lime"><a href="./">Teens</a></li>
                            </ul>
                        </form>
                        <section>
                            <h2 class="strong s30 ms20">Most popular</h2>
                            <ul class="list-slider" data-count="3" style="align-items: baseline;">
                                {% for popular_book in popular_books %}
                                    {% include('_bookshop_large.html.twig') with {'popular_book': popular_book} %}
                                {% endfor %}
                            </ul>
                        </section>
                        <section>
                            <h2 class="s20">{{ bookshop_1[0].name | default('') }}</h2>
                            <ul class="list-slider" style="align-items: baseline;">
                                {% for book in bookshop_1 %}
                                    {% include('_bookshop_small.html.twig') with {'book': book} %}
                                {% endfor %}
                            </ul>
                        </section>
                        <section>
                            <h2 class="s20">{{ bookshop_2[0].name | default('') }}</h2>
                            <ul class="list-slider" style="align-items: baseline;">
                                {% for book in bookshop_2 %}
                                    {% include('_bookshop_small.html.twig') with {'book': book} %}
                                {% endfor %}
                            </ul>
                        </section>
                    </div>
                </div>
                <aside>
                    <h2 class="s35 overlay-b">News <i class="icon-news"></i></h2>
                    <ul class="list-related">
                        {% include ('_list-related.html.twig') %}
                    </ul>
                    <h2 class="s35 overlay-b">Twitter <i class="icon-twitter"></i></h2>
                    {{ include('_twitter.html.twig') }}
                </aside>
            </div>
        </article>
    </main>
    {{ include('_footer.html.twig') }}
</div>
{{ include('_footer-scripts.html.twig') }}
</body>
</html>
