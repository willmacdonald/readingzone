<!doctype html>
<html lang="en" dir="ltr">
{{ include('_head.html.twig') }}
<body>
<div id="root">
    {{ include('_header.html.twig') }}
    <main id="content">
        <article class="module-wide theme-azure">
            <h1 class="s35">Latest Competition <i class="icon-podium"></i></h1>
            <ul class="list-entries">
                <li class="featured">
                    <figure><img src="{{ competition.image | default() }}" alt="{{ competition.title | default() }}"
                                 width="645" height="460"></figure>
                    <div>
                        <h3>{{ competition.title | default() }}</h3>
                        <p>{{ competition.intro_text | default() }}</p>
                    </div>
                </li>
                <li class="theme-lime no-img">
                    <h3>Competition guidelines</h3>
                    <div>
                        {{ competition.guidelines | default() }}
                        <p class="link-btn text-right"><a href="{{ competition.guidelines_pdf }}" class="a">PDF download
                                <i
                                        class="icon-arrow-down"></i></a></p>
                    </div>
                </li>
                <li class="no-img">
                    <h3>How to Send Your Entry</h3>
                    <div>
                        {{ competition.how_to_send | default() }}
                        <p class="link-btn text-right"><a href="{{ competition.how_to_send_pdf | default() }}"
                                                          class="a">Entry form <i
                                        class="icon-arrow-right"></i></a></p>
                    </div>
                </li>
            </ul>
        </article>
        <article class="module-wide theme-azure light">
            <h2 class="s35 overlay-navy">Resources</h2>
            <ul class="list-box theme-navy">
                {% if competition.video1_title is not empty %}
                    {{ include('_competition_rescources.html.twig', {'v': competition.video1_id, 't': competition.video1_title, 'x': competition.video1_text}) }}
                {% endif %}
                {% if competition.video2_title is not empty %}
                    {{ include('_competition_rescources.html.twig', {'v': competition.video2_id, 't': competition.video2_title, 'x': competition.video2_text}) }}
                {% endif %}
                {% if competition.video3_title is not empty %}
                    {{ include('_competition_rescources.html.twig', {'v': competition.video3_id, 't': competition.video3_title, 'x': competition.video3_text}) }}
                {% endif %}
                {% if competition.pdf1_title is not empty %}
                    {{ include('_competition_resource_doc.html.twig', {'i': competition.pdf1_img, 't': competition.pdf1_title, 'x': competition.pdf1_text, 'd': competition.pdf1_link}) }}
                {% endif %}
                {% if competition.pdf2_title is not empty %}
                    {{ include('_competition_resource_doc.html.twig', {'i': competition.pdf2_img, 't': competition.pdf2_title, 'x': competition.pdf2_text, 'd': competition.pdf2_link}) }}
                {% endif %}
                {% if competition.pdf3_title is not empty %}
                    {{ include('_competition_resource_doc.html.twig', {'i': competition.pdf3_img, 't': competition.pdf3_title, 'x': competition.pdf3_text, 'd': competition.pdf3_link}) }}
                {% endif %}
            </ul>
        </article>
        {#<p class="link-btn cta theme-navy">
            <span>Subscribe to ReadingZone Plus for more digital ‘book plus’ activities</span> <a href="./">Subscribe <i
                        class="icon-arrow-right"></i></a> <span class="offset-wide"><img src="images/background-j.jpg"
                                                                                         alt="Placeholder" width="2000"
                                                                                         height="2000"></span></p>#}
        <article class="module-wide theme-lime">
            <h2 class="s35">Get Creative <a href="{{ path('list_projects') }}" class="text-right">See all</a></h2>
            <ul class="list-box">
                <li>
                    <h3>Primary schools termly competition</h3>
                    {{ include('_competion_previous_entry_preview.html.twig', {'e': gc_primary}) }}
                </li>
                <li>
                    <h3>Secondary schools termly competition</h3>
                    {{ include('_competion_previous_entry_preview.html.twig', {'e': gc_secondary}) }}
                </li>
                <li>
                    <h3>Make &amp; Send an {{ gc_3rd_col_title }}</h3>
                    {{ include('_competion_previous_entry_preview.html.twig', {'e': gc_3rd_col}) }}
                </li>
            </ul>
        </article>
        <article class="module-wide theme-coral">
            <h2 class="s35">Previous Entries <a href="{{ path('list_projects') }}" class="text-right">See all</a></h2>
            <ul class="list-box">
                <li>
                    <h3>Primary schools termly competition</h3>
                    {{ include('_competion_previous_entry_preview.html.twig', {'e': pe_primary}) }}
                </li>
                <li>
                    <h3>Secondary schools termly competition</h3>
                    {{ include('_competion_previous_entry_preview.html.twig', {'e': pe_primary}) }}
                </li>
                <li>
                    <h3>Make &amp; Send an {{ pe_3rd_col_title }}</h3>
                    {{ include('_competion_previous_entry_preview.html.twig', {'e': pe_3rd_col}) }}
                </li>
            </ul>
        </article>
    </main>
    {{ include('_footer.html.twig') }}
</div>
{{ include('_footer-scripts.html.twig') }}
</body>
</html>
